{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@soundmemos/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@soundmemos/record": ["libs/web/record/src/index.ts"],
      "@soundmemos/settings": ["libs/web/settings/src/index.ts"],
      "@soundmemos/utils": ["libs/web/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
